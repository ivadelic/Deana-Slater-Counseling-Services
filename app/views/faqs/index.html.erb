<main>
  <% @faqs.each do |faq| %>
  <!-- Main -->
  <div class="faq-container">

    <div id= "faq-main-title">
      <h1 class="heading_with_background"><%= faq.main_title %></h1>
    </div>

    <div id="faq_nested_routes">
      <% faq.questions.each do |f| %>
      <h3><%= f.question %></h3>
      <p><%= f.answer %></p>
      <hr>
      <% end %>
    </div>
  </div>
  <div class="admin-buttons">
    <% if current_admin %>
      <button><%= link_to "Edit", edit_faq_path(faq) %></button>
      <button><%= link_to "Delete", faq_path(faq), method: :delete, data: {confirm: "Are you sure you want to delete this entire FAQs?"} %></button>
    <% end %>

    <% end %>

<% if current_admin %>
    <button><%= link_to "New", new_faq_path(@faq)%></button>
    <% end %>
  </div>
</main>
