  <div class="admin-buttons">
    <% if current_admin %>
    <button><%= link_to "Edit", edit_therapist_path(therapist) %></button>
    <button><%= link_to "Delete", therapist_path(therapist), method: :delete, data: {confirm: "Are you sure you want to delete this?"} %></button>
    <% end %>
  </div>
  <% end %>

  <% if current_admin %>
  <button class="new-therapist"><%= link_to "New", new_therapist_path(@therapist)%></button>
  <% end %>
