  <div class="side-image">
    <div class="images-wrapper1"></div>
    <div class="side-image-content">
      <br>
      <p><%= therapist.therapists_text %></p>
    </div>
  </div>


  <h1 class="heading_with_background"><%= therapist.therapist1_title %></h1>

  <div class="side-image">
    <div class="images-wrapper2"></div>
    <div class="side-image-content">
      <br>
      <span class="link"><h5><a href="<%= therapist.therapist1_link %>" target="_blank">Deana's Website</a></h5></span>
      <p><%= therapist.therapist1_text %></p>
    </div>
  </div>

  <h1 class="heading_with_background"><%= therapist.therapist2_title %></h1>

  <div class="side-image">
    <div class="images-wrapper3"></div>
