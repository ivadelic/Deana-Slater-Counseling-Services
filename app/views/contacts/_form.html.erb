  <div class="abouts-form">
    <div class="field">
      <%# f.label :main_title %><br/>
      <%# f.text_field :main_title %>
    </div>
    <div class="field">
      <%= f.label :name%><br/>
      <%= f.text_area :name %>
    </div>
    <div class="field">
      <%= f.label :credits %><br/>
      <%=f.text_field :credits %>
    </div>
    <div class= "field">
      <%= f.label :email %><br/>
