<body>
  <main>
    <h1 class="heading_with_background">Contact and Location Info</h1>

    <div class="side-image">
      <div class="images-wrapper">
        <div id="map_canvas">
      <!--     <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2886.3286109908804!2d-79.3787072!3d43.6621351!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89d4cb4b6bc500a3%3A0x5615240011aae970!2s80+Carlton+St+%2310%2C+Toronto%2C+ON+M5B+1L6!5e0!3m2!1sen!2sca!4v1437775417828" frameborder="0" style="border:0" allowfullscreen></iframe> -->
        </div>
      </div>

      <div class="side-image-content">
        <% @contacts.each do |contact| %>
          <div class="contact-container">
            <div id= "contact-main-title">
              <h1><%# contact.main_title %></h1>
            </div>
            <div id="contact_name_and_credentials">
              <h2><%= contact.name %> , <%= contact.credits %></h2>
            </div>
            <div id="contact_description">
              <p><%= contact.description %></p>
            </div>
            <div id="contact_email">
              <h4>Email:</h4>
              <p><%= contact.email %></p>
              <p><a href="mailto:<%= contact.email %>" target="_top">Send Deana an email</a></p>
            </div><br/>
            <div id="contact_phonenumber">
              <h4>Phone:</h4>
              <p><a href= "tel:<%= contact.phone_number %>"><%= contact.phone_number %></a></p>
            </div>
            <div id="contact_address">
              <h4>Address:</h4>
              <p><%= contact.address %></p>
            </div>
          </div>

          <% if current_admin %>
            <div id="about_buttons">
              <%= link_to "Edit", edit_contact_path(contact) %>
              <%= link_to "Delete", contact_path(contact), method: :delete, data: {confirm: "Are you sure you want to delete this entire section?"} %>
            </div>
          <% end %>
        <% end %>

        <% if current_admin %>
          <%= link_to "New", new_contact_path(@contact)%>
        <% end %>
      </div>
    </div>
  </main>

  <script src="https://developers.google.com/maps/documentation/javascript/reference#MapTypeStyleFeatureType"></script>

</body>


