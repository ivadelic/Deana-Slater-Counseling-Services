<body>
  <main>
  <h1 class= "heading_with_background">Contact and Location</h1>

  <div class="entire-contact-container">
      <div class="images-wrapper">
          <div id="map-canvas"></div>
      </div>

      <div class="contact-container">
        <% @contacts.each do |contact| %>
          <div id= "contact-main-title">
          </div>
          <br/>
          <div id="contact_name_and_credentials">
            <h2><%= contact.name %></h2>
            <h2><%= contact.credits %></h2>
          </div>
          <div id="contact_description">
            <p><%= contact.description %></p>
          </div>
          <div id="contact_address">
          <p><%= contact.address %></p>
        </div>

        <div id="contact_email">
      <!--       <h4>Email:</h4> -->
        <%= image_tag('mail.png', class: "mail_icons") %>
          <p><%= contact.email %></p>
          <p><a href="mailto:<%= contact.email %>" target="_top">Send email to Deana Slater</a></p>
        </div>
        <div id="contact_phonenumber">
      <!--        <h4>Phone:</h4> -->
        <%= image_tag('phone.png', class: "phone_icons") %>
          <p><a href= "tel:<%= contact.phone_number %>"><%= contact.phone_number %></a></p>
        </div>
    <!--     <div id="contact_address">
            <h4>Address:</h4>
          <p><%# contact.address %></p> -->
      </div>

        </div>

          <% if current_admin %>
            <div id="about_buttons">
              <%= link_to "Edit", edit_contact_path(contact) %>
              <%= link_to "Delete", contact_path(contact), method: :delete, data: {confirm: "Are you sure you want to delete this entire section?"} %>
            </div>
          <% end %>
        <% end %>

        <% if current_admin %>
          <%= link_to "New", new_contact_path(@contact)%>
        <% end %>
      </div>
    </div>
  </main>
</body>
