<body>
  <main>
    <h1 class= "heading_with_background">Contact and Location</h1>

    <div class="entire-contact-container">
      <div class="images-wrapper">
        <div >
          <iframe id="map-canvas" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2886.3197610708107!2d-79.38103488450194!3d43.66231917912097!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89d4cb4b6bc500a3%3A0x3a17da69e5ad362e!2s80+Carlton+St%2C+Toronto%2C+ON+M5B+1L6!5e0!3m2!1sen!2sca!4v1506712680264" frameborder="0" style="border:0" allowfullscreen></iframe>
        </div>
      </div>
      <hr>

      <div class="contact-container">
        <% @contacts.each do |contact| %>
        <div id= "contact-main-title"></div>
        <div id="contact_name_and_credentials">
          <h1><%= contact.name %></h1>
          <p><%= contact.credits %></p>
        </div>
        <div id="contact_description">
          <p  class="contact-description"><%= contact.description %></p>
        </div>
        <hr>
        <div class="contact-points">
          <div class="contact-point">
            <i class="fa fa-location-arrow fa-2x" aria-hidden="true"></i>
            <h3>Address</h3>
            <a href="https://www.google.com/maps/place/80+Carlton+St,+Toronto,+ON+M5B+1L6,+Canada/@43.662139,-79.3808959,17z/data=!3m1!4b1!4m2!3m1!1s0x89d4cb4b6bc500a3:0x3a17da69e5ad362e?hl=en-US" target="_blank">
              <%= contact.address %>
            </a>
          </div>

          <div class="contact-point">
            <i class="fa fa-envelope fa-2x" aria-hidden="true"></i>
            <h3>Email</h3>
            <a class="contact-email" href="mailto:<%= contact.email %>" target="_top"><%= contact.email %></a>
          </div>

          <div class="contact-point">
            <i class="fa fa-phone fa-2x" aria-hidden="true"></i>
            <h3>Telephone</h3>
            <a href= "tel:<%= contact.phone_number %>"><%= contact.phone_number %>
            </a>
          </div>
        </div>

        <% if current_admin %>
        <div id="admin-buttons">
          <button><%= link_to "Edit", edit_contact_path(contact) %></button>
          <button><%= link_to "Delete", contact_path(contact), method: :delete, data: {confirm: "Are you sure you want to delete this entire section?"} %></button>
          <% end %>
          <% end %>

          <% if current_admin %>
          <button><%= link_to "New", new_contact_path(@contact)%></button>
          <% end %>
        </div>
      </div>
    </br>
  </main>
</body>
