<% @contacts.each do |contact| %>
  <div class="contact-container">
    <div id= "contact-main-title">
      <h1><%# contact.main_title %></h1>
    </div>
    <div id="contact_name_and_credentials">
      <h2><%= contact.name %> , <%= contact.credits %></h2>
    </div>
    <div id="contact_description">
      <p><%= contact.description %></p>
    </div>
    <div id="contact_email">
      <h4><%= contact.email %></h4>
      <a href="mailto:<%= contact.email %>" target="_top">Send an email</a>
    </div><br/>
    <div id="contact_phonenumber">
      <a href= "tel:<%= contact.phone_number %>"><%= contact.phone_number %></a>
    </div>
    <div id="contact_address">
      <p><%= contact.address %></p>
    </div>
  </div>

  <% if current_admin %>
    <div id="about_buttons">
      <%= link_to "Edit", edit_contact_path(contact) %>
      <%= link_to "Delete", contact_path(contact), method: :delete, data: {confirm: "Are you sure you want to delete this entire section?"} %>
    </div>
  <% end %>
<% end %>

<% if current_admin %>
  <%= link_to "New", new_contact_path(@contact)%>
<% end %>